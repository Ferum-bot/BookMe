<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:top="@dimen/bottom_line_edit_text_width"
        android:start="@dimen/bottom_line_edit_text_width"
        android:end="@dimen/bottom_line_edit_text_width">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/white"/>

            <stroke
                android:width="2dp"
                android:color="@color/grey"/>
        </shape>
    </item>
</layer-list>