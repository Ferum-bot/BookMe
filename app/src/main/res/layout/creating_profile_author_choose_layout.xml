<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guidline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guidline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <View
        android:id="@+id/first_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/first_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/first_author"

        style="@style/ChooseAuthorTextViewStyle"

        app:layout_constraintEnd_toStartOf="@id/first_add_button"
        app:layout_constraintTop_toTopOf="@id/first_add_button"
        app:layout_constraintBottom_toBottomOf="@id/first_add_button"
        app:layout_constraintStart_toStartOf="@id/start_guidline"/>

    <ImageView
        android:id="@+id/first_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/first_line"
        app:layout_constraintEnd_toEndOf="@id/end_guidline"

        tools:src="@drawable/ic_minus"/>

    <View
        android:id="@+id/second_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/first_add_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/second_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/second_author"

        style="@style/ChooseAuthorTextViewStyle"

        app:layout_constraintTop_toTopOf="@id/second_add_button"
        app:layout_constraintBottom_toBottomOf="@id/second_add_button"
        app:layout_constraintEnd_toStartOf="@id/second_add_button"
        app:layout_constraintStart_toStartOf="@id/start_guidline"/>

    <ImageView
        android:id="@+id/second_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/second_line"
        app:layout_constraintEnd_toEndOf="@id/end_guidline"/>

    <View
        android:id="@+id/third_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/second_add_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/third_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/third_line"
        app:layout_constraintEnd_toEndOf="@id/end_guidline"/>

    <TextView
        android:id="@+id/third_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/third_author"

        style="@style/ChooseAuthorTextViewStyle"

        app:layout_constraintTop_toTopOf="@id/third_add_button"
        app:layout_constraintBottom_toBottomOf="@id/third_add_button"
        app:layout_constraintEnd_toStartOf="@id/third_add_button"
        app:layout_constraintStart_toStartOf="@id/start_guidline"/>

    <ImageView
        android:id="@+id/fours_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"

        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="@id/end_guidline"
        app:layout_constraintTop_toBottomOf="@id/fours_line"/>

    <View
        android:id="@+id/fours_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/third_add_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fours_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/fours_author"

        style="@style/ChooseAuthorTextViewStyle"

        app:layout_constraintTop_toTopOf="@id/fours_add_button"
        app:layout_constraintBottom_toBottomOf="@id/fours_add_button"
        app:layout_constraintEnd_toStartOf="@id/fours_add_button"
        app:layout_constraintStart_toStartOf="@id/start_guidline"/>

    <ImageView
        android:id="@+id/fives_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/fives_line"
        app:layout_constraintEnd_toEndOf="@id/end_guidline"/>

    <View
        android:id="@+id/fives_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/fours_add_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fives_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/fives_author"

        style="@style/ChooseAuthorTextViewStyle"

        app:layout_constraintTop_toTopOf="@id/fives_add_button"
        app:layout_constraintBottom_toBottomOf="@id/fives_add_button"
        app:layout_constraintEnd_toStartOf="@id/fives_add_button"
        app:layout_constraintStart_toStartOf="@id/start_guidline"/>

    <View
        android:id="@+id/sixes_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/fives_add_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>