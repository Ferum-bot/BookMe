<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="DefaultButtonStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="WelcomeBackTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:fontFamily">@font/yrsa</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthorizationEmailPhoneTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/DefaultTabTextAppearance</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="DefaultTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AuthorizationEditTextStyle" parent="DefaultTextViewStyle">
        <item name="android:textColorHint">@color/grey</item>
        <item name="background">@drawable/bg_for_authorization_edit_texts</item>
        <item name="android:background">@drawable/bg_for_authorization_edit_texts</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>