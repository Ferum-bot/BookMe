<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="DefaultButtonStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="WelcomeBackTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:fontFamily">@font/yrsa</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>