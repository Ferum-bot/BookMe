<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultMessageTextStyle">
        <item name="android:minWidth">@dimen/message_text_min_width</item>
        <item name="android:layout_margin">@dimen/message_text_margin</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:maxWidth">@dimen/message_text_max_width</item>
    </style>

    <style name="YourMessageTextStyle" parent="DefaultMessageTextStyle">
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InterlocutorMessageTextStyle" parent="DefaultMessageTextStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultMessageDateTextStyle">
        <item name="android:textSize">@dimen/message_date_label_size</item>
        <item name="android:layout_marginEnd">@dimen/message_date_label_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/message_date_label_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/message_date_label_margin_bottom</item>
    </style>

    <style name="YourMessageDateTextStyle" parent="DefaultMessageDateTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="InterlocutorMessageDateTextStyle" parent="DefaultMessageDateTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="DefaultMessageAuthorTextStyle">
        <item name="android:textSize">@dimen/message_author_label_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginStart">@dimen/message_author_label_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/message_author_label_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/message_author_label_margin_vertical</item>
    </style>

    <style name="YourMessageAuthorTextStyle" parent="DefaultMessageAuthorTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InterlocutorMessageAuthorTextStyle" parent="DefaultMessageAuthorTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultChatInterlocutorNameStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/chat_interlocutor_name_text_size</item>
    </style>

    <style name="DefaultChatLastMessageStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/chat_last_message_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DefaultChatLastMessageDateStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/chat_last_message_date_text_size</item>
    </style>

    <style name="DefaultCurrentChatHeaderInterlocutorNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DefaultCurrentChatHeaderAdditionalTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DefaultUnReadChatMessagesCountStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">6dp</item>
    </style>
</resources>